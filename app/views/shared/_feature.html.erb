<% if @header_comic %>
<section id="feature">
	<% header_img = image_tag @header_comic.header_image.url, :class => 'header-image' %>
	<%= link_to header_img, comic_url(@header_comic) %>
 	<% if (@header_comic.created_at.to_i - Time.now.to_i) > 1209600  %>
		<%= image_tag 'newcomic', :class => 'newcomic' %>
	<% end -%>
</section>
<% end %>