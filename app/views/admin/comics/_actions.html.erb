<ul>
  <% if Admin::ComicsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_comics_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_comic_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ComicsController.sortable? and Comic.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Comics"),
                 admin_comics_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Comics"),
                 admin_comics_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>